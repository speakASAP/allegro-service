{
  "name": "allegro-service",
  "version": "1.0.0",
  "description": "Allegro.cz/pl sales channel service - multi-account offer management",
  "private": true,
  "scripts": {
    "migration:run-direct": "ts-node scripts/run-migration-direct.ts",
    "migrate:products": "ts-node scripts/migrate-products-to-catalog.ts",
    "migrate:products:dry-run": "ts-node scripts/migrate-products-to-catalog.ts --dry-run",
    "export:products": "ts-node scripts/migrate-products-to-catalog.ts --export-only",
    "verify:migration": "ts-node scripts/verify-migration-prerequisites.ts",
    "verify:migration:complete": "ts-node scripts/verify-migration-complete.ts",
    "start:dev": "concurrently -n \"API-GW,ALLEGRO,IMPORT,SETTINGS,FRONTEND\" -c \"blue,yellow,cyan,green,white\" \"cd services/api-gateway && npm run start:dev\" \"cd services/allegro-service && npm run start:dev\" \"cd services/imports && npm run start:dev\" \"cd services/settings && npm run start:dev\" \"cd services/frontend && npm run dev\"",
    "test:event-polling": "ts-node scripts/test-event-polling.ts",
    "test:event-polling:bash": "./scripts/test-allegro-api-events.sh"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "amqplib": "^0.10.3",
    "amqp-connection-manager": "^4.1.14",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "csv-parse": "^6.1.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/amqplib": "^0.10.4",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.15.6",
    "bcrypt": "^6.0.0",
    "concurrently": "^8.2.2",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3"
  }
}
